@{ViewData["Title"] = "My Purchases";
}
@model List<OrdersModel>
<div class="d-flex justify-content-between align-items-center mt-5 mb-4">
    <div class="head-txt">
        <h2 class="fw-bolder d-inline-block">@ViewData["Title"]</h2>
    </div>
</div>

<div id="cart-list" class="cart-list">
    @foreach(var item in Model)
    {
        <div class="row py-4 border-bottom">
            <div class="card col-8 px-0">
                <div class="row g-0">
                    <div class="col-md-3 order-1 order-md-1">
                        <img class="img-fluid rounded-start" src="~/img/newjeans.jpeg" alt="Card image cap">
                    </div>
                    <div class="col-md-9 order-2 order-md-2">
                        <div class="card-body pb-0">
                            <p class="card-ttl h4 fw-bolder">@item.ProductName</p>
                            @*<div class="price-tag">
                            <p class="d-inline-block fw-bolder">Price:</p>
                            <span>$0.00</span>
                        </div>*@
                            <div class="card-desc">
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 d-flex flex-column justify-content-between">
                <div class="row">
                    <div class="price-tag col-8">
                        <p class="h5 d-inline-block fw-bolder">Price:</p>
                        <span class="h5"> @item.ProductPrice</span>
                    </div>
                    <div class="qty-tag col-8">
                        <p class="h5 d-inline-block fw-bolder">Quantity:</p>
                        <span class="h5">@item.ProductQuantity</span>
                    </div>
                    <div class="qty-tag col-8">
                        <p class="h5 d-inline-block fw-bolder">Date:</p>
                        <span class="h5">@item.ProductDate</span>
                    </div>
                </div>
                <div class="activation-form">
                    <label for="activation-code-selection">Activation Code:</label>
                    <select class="form-select" aria-label="activation-code-selection">
                        @for (int a = 0; a < 3; a++)
                        {
                            <option value="XYCU2ZM2">XYCU2ZM2</option>
                        }

                    </select>
                </div>
                <button class="btn btn-primary w-100">
                    Download
                    <i class="bi bi-download"></i>
                </button>
            </div>
        </div>
            }
        </div>

